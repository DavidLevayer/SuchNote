<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme.TranslucentActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Actionbar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- Icone custom pour l'actionBar -->
        <item name="android:icon">@null</item>
    </style>

    <style name="Actionbar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <!-- Suppression des titres l'actionBar -->
        <item name="android:displayOptions">useLogo|showHome</item>
        <!-- Icone custom pour l'actionBar -->
        <item name="android:icon">@null</item>
    </style>

</resources>
